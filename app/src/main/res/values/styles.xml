<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Catalog_main">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Catalog_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Catalog_floting">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_margin16</item>
        <item name="android:src">@drawable/bookone</item>
    </style>

    <style name="Editor_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Editor_Linear_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/editor_padding_text6</item>
    </style>

    <style name="Editor_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Editor_text">
        <item name="android:layout_width">@dimen/editor_width0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/editor_padding_text6</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:text">sans-serif-condensed</item>
        <item name="android:layout_margin">@dimen/editor_padding_text6</item>
    </style>

    <style name="Editor_linear_edit">
        <item name="android:layout_width">@dimen/editor_width0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Editor_edit_text1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    <style name="Editor_edit_text2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="list_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="list_text_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_margin8</item>
        <item name="android:text">@string/book_name</item>
        <item name="android:textSize">@dimen/text_size2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_text_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin8</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin112</item>
        <item name="android:text">@string/book_price</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_margin8</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="list_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/activity_margin8</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/buy_book</item>
    </style>
</resources>